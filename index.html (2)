<body>
    <div class="game-box">
        <h1>üßü 50/50 SURVIVAL üßü</h1>
        
        <div class="story-box" id="story">
            <h2>‚ö†Ô∏è ZOMBIE OUTBREAK - DAY 1 ‚ö†Ô∏è</h2>
            <p>A horde of zombies is breaking into your house RIGHT NOW!</p>
            <p><strong>CHOOSE QUICKLY:</strong></p>
            <p style="color: #f00; font-size: 1.5em;">2 choices will KILL YOU instantly!</p>
        </div>
        
        <div class="choices" id="choices">
            <!-- Buttons will be added here -->
        </div>
        
        <div class="result" id="result" style="display: none;">
            <!-- Result shown here -->
        </div>
        
        <button class="restart" onclick="restartGame()" style="display: none;" id="restartBtn">
            üîÑ PLAY AGAIN
        </button>
    </div>

    <script>
        // DEATH CHOICES: 2 of these 4 will INSTANTLY KILL YOU
        const firstChoices = [
            {
                text: "üß± BARRICADE THE DOOR",
                description: "Try to reinforce the entrance",
                outcome: "DEATH", // This one KILLS YOU
                message: "Zombies break through anyway and devour you! üíÄ"
            },
            {
                text: "üèÉ ESCAPE THROUGH WINDOW",
                description: "Jump to safety outside",
                outcome: "SURVIVE",
                message: "You make it outside! Found a working car! üöó"
            },
            {
                text: "üî™ GRAB A KNIFE AND FIGHT",
                description: "Stand your ground and attack",
                outcome: "DEATH", // This one KILLS YOU
                message: "One zombie becomes TEN. You're overwhelmed! üíÄ"
            },
            {
                text: "ü™ü HIDE IN THE CLOSET",
                description: "Stay quiet and hope they pass",
                outcome: "SURVIVE",
                message: "Zombies don't find you! You survive the night! üåô"
            }
        ];
        
        // Game state
        let gameActive = true;
        
        // Function to shuffle array (randomize death choices)
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }
        
        // Initialize game
        function initGame() {
            gameActive = true;
            
            // Hide result and restart button
            document.getElementById("result").style.display = "none";
            document.getElementById("restartBtn").style.display = "none";
            
            // Show initial story
            document.getElementById("story").innerHTML = `
                <h2>‚ö†Ô∏è ZOMBIE OUTBREAK - DAY 1 ‚ö†Ô∏è</h2>
                <p>A horde of zombies is breaking into your house RIGHT NOW!</p>
                <p><strong>CHOOSE QUICKLY:</strong></p>
                <p style="color: #f00; font-size: 1.5em; text-shadow: 0 0 10px #f00;">
                    ‚ö†Ô∏è WARNING: 2 choices will KILL YOU instantly! ‚ö†Ô∏è
                </p>
                <p style="color: #ff0;">Make your move...</p>
            `;
            
            // Create choice buttons
            const choicesDiv = document.getElementById("choices");
            choicesDiv.innerHTML = "";
            
            // Shuffle choices so death is random each game
            const shuffledChoices = shuffleArray([...firstChoices]);
            
            shuffledChoices.forEach((choice, index) => {
                const button = document.createElement("div");
                button.className = `choice ${choice.outcome === "DEATH" ? "death" : ""}`;
                button.innerHTML = `
                    <strong>${choice.text}</strong><br>
                    <small>${choice.description}</small>
                `;
                
                button.onclick = function() {
                    if (!gameActive) return;
                    gameActive = false;
                    showResult(choice);
                };
                
                choicesDiv.appendChild(button);
            });
        }
        
        // Show result of choice
        function showResult(choice) {
            const resultDiv = document.getElementById("result");
            const choicesDiv = document.getElementById("choices");
            const restartBtn = document.getElementById("restartBtn");
            
            // Hide choices
            choicesDiv.style.display = "none";
            
            // Show result
            resultDiv.style.display = "block";
            
            if (choice.outcome === "DEATH") {
                resultDiv.className = "result dead";
                resultDiv.innerHTML = `
                    <h1>üíÄ YOU DIED! üíÄ</h1>
                    <p style="font-size: 1.3em;">${choice.message}</p>
                    <p style="color: #f88; margin-top: 20px;">
                        Wrong choice! The zombies got you...
                    </p>
                `;
                
                // Play death sound
                playDeathSound();
                
            } else {
                resultDiv.className = "result alive";
                resultDiv.innerHTML = `
                    <h1>üéâ YOU SURVIVED! üéâ</h1>
                    <p style="font-size: 1.3em;">${choice.message}</p>
                    <p style="color: #8f8; margin-top: 20px;">
                        Good choice! You live to fight another day!
                    </p>
                `;
                
                // Play survival sound
                playSurvivalSound();
            }
            
            // Show restart button
            restartBtn.style.display = "block";
            
            // Update story
            document.getElementById("story").innerHTML = `
                <h2>${choice.outcome === "DEATH" ? "üíÄ GAME OVER üíÄ" : "üéä SURVIVAL! üéä"}</h2>
                <p>You chose: <strong>${choice.text}</strong></p>
            `;
        }
        
        // Sound effects
        function playDeathSound() {
            try {
                // Create creepy death sound
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.setValueAtTime(200, audioContext.currentTime);
                oscillator.frequency.exponentialRampToValueAtTime(50, audioContext.currentTime + 1);
                
                oscillator.type = 'sawtooth';
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 1);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 1);
            } catch(e) {
                // Sound not supported
            }
        }
        
        function playSurvivalSound() {
            try {
                // Create happy survival sound
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.setValueAtTime(300, audioContext.currentTime);
                oscillator.frequency.setValueAtTime(400, audioContext.currentTime + 0.1);
                oscillator.frequency.setValueAtTime(500, audioContext.currentTime + 0.2);
                
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.2, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.3);
            } catch(e) {
                // Sound not supported
            }
        }
        
        // Restart game
        function restartGame() {
            document.getElementById("choices").style.display = "grid";
            initGame();
        }
        
        // Start game when page loads
        window.onload = initGame;
    </script>
</body>
</html>
